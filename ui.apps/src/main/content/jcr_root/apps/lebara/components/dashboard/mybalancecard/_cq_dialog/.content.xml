<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="My Balance Card"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-navigation__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <mybalance
                        jcr:primaryType="nt:unstructured"
                        jcr:title="My Balance"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Title"
                                                name="./title"
                                                value=" My Balance"/>
                                            <desc
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Description"
                                                name="./description"
                                                value="The current balance is {0}top up now or later."/>
                                            <topuplabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Top up Label"
                                                name="./topupLabel"
                                                value="Top up"/>
                                            <autotopuplabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Auto Top up Label"
                                                name="./autoTopupLabel"
                                                value="Auto top up"/>
                                            <activelabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Active Label"
                                                name="./activeLabel"
                                                value="Active"/>
                                            <inactivelabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Inactive Label"
                                                name="./inactiveLabel"
                                                value="Inactive"/>
                                            <activedesc
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Active Description"
                                                name="./activeDesc"
                                                value="Every time your credit reaches {0} it will be topped up by {1}"/>
                                            <inactivedesc
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Inactive Description"
                                                name="./inactiveDesc"
                                                value="Turn on your automatic top-up now. Donâ€™t worry you can adjust your top up limit and stay in full control"/>
                                            <editlabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Edit Label"
                                                name="./editLabel"
                                                value="Edit"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </mybalance>
                    <popup
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Popup"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <topupselectlabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Topup Select Label"
                                                name="./topupSelectLabel"
                                                value="Your balance will be toped up"/>
                                            <limitselectlabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Limit Select Label"
                                                name="./limitSelectLabel"
                                                value=" Limit per month"/>
                                            <autotopupstatuslabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Auto Top up Status Label"
                                                name="./autoTopupStatusLabel"
                                                value="Auto-topup status"/>
                                            <autotopupbuttonlabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Auto Top up Button Label"
                                                name="./autoTopupButtonLabel"
                                                value="Save auto topup"/>
                                            <cftopupplanpath
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="dam/cfm/components/cfpicker"
                                                fieldLabel="Select Top up Plan"
                                                name="./cfTopupPlanPath"
                                                required="{Boolean}true"
                                                rootPath="/content/dam/lebara"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </popup>
                    <successoverlay
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Success Overlay"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <showSuccessMessageOverlay
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                name="./showSuccessMessageOverlay"
                                                text="Show Success Message Overlay?"
                                                uncheckedValue="{Boolean}false"
                                                value="{Boolean}true"/>
                                            <successOverlayTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Success Overlay Title"
                                                name="./successOverlayTitle"
                                                fieldDescription="Success"/>
                                            <successOverlaySubTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Success Overlay Subtitle"
                                                name="./successOverlaySubTitle"
                                                fieldDescription="Auto topup has been done successfully"/>
                                            <deactivateSuccessOverlaySubTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                name="./deactivateSuccessOverlaySubTitle"
                                                text="Deactivate Success Overlay Subtitle?"
                                                uncheckedValue="{Boolean}false"
                                                value="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </successoverlay>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
