<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Top Up Component"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items
                    jcr:primaryType="nt:unstructured">
                    <headings
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Left Side Headings"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <leftTitle
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Left Side Main Title"
                                                    fieldLabel="Left Side Title"
                                                    value="Top Up Credits"
                                                    name="./leftTitle"/>
                                            <leftSubTitle
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Left Side Sub Title"
                                                    fieldLabel="Left Side Sub Title"
                                                    value="Buy Credit to call, send sms and use data"
                                                    name="./leftSubTitle"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </headings>
                    <quicktopup
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Quick Top Up"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items
                                            jcr:primaryType="nt:unstructured">
                                            <rightTitle
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Right Side Main Title"
                                                    fieldLabel="Right Side Title"
                                                    value="Quick Topup"
                                                    name="./rightTitle"/>
                                            <rightSubTitle
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Right Side Sub Title"
                                                    fieldLabel="Right Side Sub Title"
                                                    value="Choose from the below amounts"
                                                    name="./rightSubTitle"/>
                                            <ctaLabel
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Add to Cart or Buy Top Up"
                                                    fieldLabel="Add to Cart or Buy Top Up Label"
                                                    value="Add to Cart"
                                                    name="./ctaLabel"/>
                                            <topupFragmentPath
                                                    cq:showOnCreate="{Boolean}true"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="dam/cfm/components/cfpicker"
                                                    fieldLabel="Topup Content Frament path"
                                                    name="./cfPath"
                                                    required="{Boolean}true"
                                                    rootPath="/content/dam/lebara"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </quicktopup>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
