<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Detailed View Plans"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            jcr:title="View Plan Basic"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <plans
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Plans"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                    composite="{Boolean}true"
                                    fieldDescription="Select plans to display on the view plan component"
                                    fieldLabel="Plans">
                                <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        name="./phases">
                                    <granite:data jcr:primaryType="nt:unstructured"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <applicationformpathplan
                                                        cq:showOnCreate="{Boolean}true"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="dam/cfm/components/cfpicker"
                                                        fieldLabel="Content fragment path"
                                                        name="./cfPlanPath"
                                                        required="{Boolean}true"
                                                        rootPath="/content/dam/lebara"/>
                                                <dataMinSelector
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldLabel="Select Between Data Or Minutes"
                                                        name="./allowanceType">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <Data
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Data"
                                                                selected="true"
                                                                value="data" />
                                                        <Minutes
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Minutes"
                                                                value="minutes" />
                                                    </items>
                                                </dataMinSelector>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </plans>
                            <backgroundColor
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                classicPaletteType="true"
                                editType="true"
                                fieldLabel="BoxBackgroundColor"
                                name="./boxBackgroundColor"/>
                        </items>
                    </column>
                    <column2
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Advance Tab"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured"
                               sling:hideChildren="[exploreAllLabel,exploreAllLink]">
                            <heading
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Heading"
                                    name="./heading"/>
                            <title
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Title"
                                    name="./title"/>
                            <subtitle
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Sub Title"
                                    name="./subTitle"/>
                            <description
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Description"
                                    name="./description"/>
                            <showlabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Show Button Label"
                                    name="./showLabel"/>
                            <hidelabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Hide Button Label"
                                    name="./hideLabel"/>
                            <ctatop
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="CTA Top Text"
                                    name="./ctaTopLabel"/>
                            <ctatoplink
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="CTA Top Link"
                                    fieldLabel="CTA Top Link"
                                    name="./ctaTopLink"/>
                            <ctabottom
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="CTA Bottom Text"
                                    name="./ctaBottomLabel"/>
                            <ctabottomlink
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="CTA Bottom link"
                                    fieldLabel="Bottom Link"
                                    name="./ctaBottomLink"/>
                            <ctaCloseLabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Popup Close Label"
                                    value="Close"
                                    name="./ctaCloseLabel"/>
                            <ctaDownloadLabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Popup Downdload Label"
                                    value="Download"
                                    name="./ctaDownloadLabel"/>
							<centerAlignment
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                defaultChecked="{Boolean}false"
                                fieldDescription="Check the checkbox to text be centre-aligned"
                                fieldLabel="TextAlignment"
                                name="./textAlignment"
                                text="TextAlignment"
                                value="{Boolean}true"/>
                            <columnsView
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                defaultChecked="{Boolean}false"
                                fieldDescription="Check the checkbox to view more than three columns"
                                fieldLabel="ColumnsView"
                                name="./columnsView"
                                text="ColumnsView"
                                value="{Boolean}true"/>
                            <labelTextColor
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                classicPaletteType="true"
                                editType="true"
                                fieldLabel="LabelTextColor"
                                name="./labelTextColor"/>		
                        </items>
                    </column2>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
