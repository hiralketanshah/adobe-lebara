<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="View Plans"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            jcr:title="View Plan Basic"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <buttonlabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Buy Plan Button Label"
                                    name="./buttonLabel"/>
                            <unlimitedtextfield
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Unlimited Text Field"
                                    name="./unlimitedTextField"/>
                            <minutesfield
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Minutes Field"
                                    name="./minutesField"/>
                            <plans
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Plans"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                    composite="{Boolean}true"
                                    fieldDescription="Select plans to display on the view plan component"
                                    fieldLabel="Plans">
                                <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        name="./phases">
                                    <granite:data jcr:primaryType="nt:unstructured"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <applicationformpath
                                                        cq:showOnCreate="{Boolean}true"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="dam/cfm/components/cfpicker"
                                                        fieldLabel="Content Frament path"
                                                        name="./cfPath"
                                                        required="{Boolean}true"
                                                        rootPath="/content/dam/lebara"/>
                                                <applicationformpathplan
                                                        cq:showOnCreate="{Boolean}true"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="dam/cfm/components/cfpicker"
                                                        fieldLabel="Select Plan"
                                                        name="./cfPlanPath"
                                                        required="{Boolean}true"
                                                        rootPath="/content/dam/lebara"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </plans>
                        </items>
                    </column>
                    <column2
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Advance Tab"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <showplan
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    defaultChecked="{Boolean}false"
                                    fieldDescription="Check -'Advance View Plan' checkbox to Display the Detailed View Plan."
                                    fieldLabel="Advance View Plan"
                                    name="./showViewPlan"
                                    text="Advance View Plan"
                                    value="{Boolean}true"/>
                            <title
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Title"
                                    name="./title"/>
                            <subtitle
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Sub Title"
                                    name="./subTitle"/>
                            <description
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Description"
                                    name="./description"/>
                            <showlabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Show Button Label"
                                    name="./showLabel"/>
                            <hidelabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Hide Button Label"
                                    name="./hideLabel"/>
                            <ctatop
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="CTA Top Text"
                                    name="./ctaTopLabel"/>
                            <ctatoplink
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="CTA Top Link"
                                    fieldLabel="CTA Top Link"
                                    name="./ctaTopLink"/>
                            <ctabottom
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="CTA Bottom Text"
                                    name="./ctaBottomLabel"/>
                            <ctabottomlink
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="CTA Bottom link"
                                    fieldLabel="Bottom Link"
                                    name="./ctaBottomLink"/>
                        </items>
                    </column2>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
