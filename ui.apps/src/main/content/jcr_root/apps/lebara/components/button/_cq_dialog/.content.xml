<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Button"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem_cmp_button_v1"
    trackingFeature="core-components:button:v1">
    <content
        granite:class="cmp-button__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items
                    jcr:primaryType="nt:unstructured"
                    sling:hideChildren="[accessibility]">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items
                                            jcr:primaryType="nt:unstructured"
                                            sling:hideChildren="[icon,id]">
                                            <buttonstyle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="By default, button style will be &quot;outline&quot;"
                                                fieldLabel="Button Style"
                                                name="./buttonStyle">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <default
                                                        jcr:primaryType="nt:unstructured"
                                                        text="(Default)"
                                                        value=""/>
                                                    <solid
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Solid"
                                                        value="solid"/>
                                                    <link
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Link"
                                                        value="link"/>
                                                    <ghost
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Ghost"
                                                        value="ghost"/>
                                                </items>
                                            </buttonstyle>
						<buttonTextColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                fieldLabel="Button Text Color"
                                                name="./buttonTextColor"
                                                showDefaultColors="{Boolean}false"
                                                showProperties="{Boolean}true"
                                                showSwatches="{Boolean}true"/>
                                            <buttonBackgroundColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                fieldLabel="Button Background Color"
                                                name="./buttonBackgroundColor"
                                                showDefaultColors="{Boolean}false"
                                                showProperties="{Boolean}true"
                                                showSwatches="{Boolean}true"/>
											<buttonBorderColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                fieldLabel="Button Border Color"
                                                name="./buttonBorderColor"
                                                showDefaultColors="{Boolean}false"
                                                showProperties="{Boolean}true"
                                                showSwatches="{Boolean}true"/>
                                            <buttonHoverBgColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                fieldLabel="Button Hover Background Color"
                                                name="./buttonHoverBgColor"
                                                showDefaultColors="{Boolean}false"
                                                showProperties="{Boolean}true"
                                                showSwatches="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
