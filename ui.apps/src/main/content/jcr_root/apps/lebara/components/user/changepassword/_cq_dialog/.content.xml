<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Change Password"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <column1
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Change Password"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <changePasswordHeading
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Change Password Label"
                                    fieldLabel="Change Password Title Label"
                                    name="./changePasswordHeading"
                                    value="Change Password"/>
                            <oldPasswordLabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Old Password Label"
                                    fieldLabel="Old Password"
                                    name="./frmFields/oldPasswordLabel"
                                    value="Old Password"/>
                            <oldPasswordPlacehodler
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Old Password Placeholder"
                                    fieldLabel="Old Password Placeholder"
                                    name="./frmFields/oldPasswordPlacehodler"
                                    value="Enter Old Password"/>
                            <newPasswordLabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="New Password Label"
                                    fieldLabel="New Password Label"
                                    name="./frmFields/newPasswordLabel"
                                    value="New Password"/>
                            <newPasswordPlacehodler
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="New Password Placeholder"
                                    fieldLabel="New Password Placeholder"
                                    name="./frmFields/newPasswordPlacehodler"
                                    value="Enter New Password"/>
                            <confirmPasswordLabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Confirm Password Label"
                                    fieldLabel="Confirm Password Label"
                                    name="./frmFields/confirmNewPasswordLabel"
                                    value="Confirm Password"/>
                            <confirmPasswordPlacehodler
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Confirm Password Placeholder"
                                    fieldLabel="Confirm Password Placeholder"
                                    name="./frmFields/confirmPasswordPlacehodler"
                                    value="Confirm Password Placeholder"/>
                            <ctaSaveLabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Save CTA Label"
                                    name="./frmFields/ctaButtonLabel"
                                    value="SAVE"/>
                            <ctaCancelLabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Cancel CTA Label"
                                    name="./frmFields/ctaCancelLabel"
                                    value="CANCEL"/>

                        </items>
                    </column1>

                   <column2
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Error And Success Messages"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <oldPasswordRequiredMsg
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="The old password field cannot be empty"
                                fieldLabel="Old Password Error Message on Empty"
                                name="./validationMessages/oldPasswordRequiredMsg"
                                value="Please enter a password"/>
                            <newPasswordRequiredMsg
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="The new password field cannot be empty"
                                    fieldLabel="New Password Error Message on Empty"
                                    name="./validationMessages/newPasswordRequiredMsg"
                                    value="Please enter a password"/>

                            <confirmPasswordRequiredMsg
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="The confirm password field cannot be empty"
                                    fieldLabel="Confirm Password Error Message on Empty"
                                    name="./validationMessages/confirmPasswordRequiredMsg"
                                    value="Please enter a password"/>

                            <passwordNotMatchErrorMessage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Confirm Password Not Match Error Message"
                                    value="Confirm password should be same as new password."
                                    name="./validationMessages/passwordNotMatchErrorMessage"/>
                            <passwordRestrictionMsg
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Password Restriction Error Message"
                                    value="Password must contain minimum 8 characters including Alpha numeric, Upper case, Lower case, Number and Special character."
                                    name="./validationMessages/passwordRestrictionMsg"/>
                        </items>
                    </column2>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
