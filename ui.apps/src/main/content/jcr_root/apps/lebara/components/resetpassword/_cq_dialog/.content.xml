<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Reset Password"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[lebara.touchui]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">                    
                    <resetpassword
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Reset Password Form Fields"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <formtitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Title"
                                                value="Reset Password"
                                                name="./resetPwdTitle"/>
                                            <formdesc
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                fieldLabel="Description"
                                                value="Kindy enter email address or phone number and we will send you a link to reset your password"
                                                name="./resetPwdDescription"/>
                                            <emaillabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Enter label for Email address"
                                                fieldLabel="Email Address Label"
                                                value="Email Address"
                                                name="./resetPwdEmailLabel"/>
                                            <mobileradio
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Enter label for mobile number"
                                                fieldLabel="Mobile Number Label"
                                                value="Mobile Number"
                                                name="./resetPwdMobileLabel"/>
                                            <resetbuttonlabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Reset Password Button Label"
                                                value="RESET PASSWORD"
                                                name="./resetPwdButtonLabel"/>
                                            <cancelbuttonlabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Cancel Button Label"
                                                value="CANCEL"
                                                name="./resetPwdButtonCancelLabel"/>
                                            <emptyMobileError
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Error message if mobile number is not entered"
                                                value="Please enter your number to reset passwords"
                                                name="./emptyMobileError"/>
                                            <invalidMobileError
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Error message if mobile number is incorrect"
                                                value="Please enter 10-12 digits including 0"
                                                name="./invalidMobileError"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </resetpassword>                                        
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
