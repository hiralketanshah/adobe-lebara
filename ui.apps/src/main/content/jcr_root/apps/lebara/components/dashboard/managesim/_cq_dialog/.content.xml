<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Manage Sim"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[lebara.touchui]">
    <content
        granite:class="cmp-navigation__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <heading
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Generic Config"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"                                                
                                                fieldLabel="Title"
                                                value="Attach your SIM"
                                                name="./title"/>
                                            <linkedSimDesc
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"                                                
                                                fieldLabel="Linked Sim Description"
                                                fieldDescription="Add a placeholder {0} which will be replaced by number of sim linked dynamically"
                                                name="./linkedSimDesc"/>
                                            <attachNewSim
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"                                                
                                                fieldLabel="Attach New Sim Label"
                                                value="Attach new sim"
                                                name="./attachNewSim"/>                                           
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </heading>
                    <delink
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Delink Sim Config"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <delinkLabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"                                                
                                                fieldLabel="Delink Sim Label"
                                                value="DELINK SIM"
                                                name="./delinkLabel"/>
                                            <delinkContinueLabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"                                                
                                                fieldLabel="Delink Continue Label"
                                                value="CONTINUE"
                                                name="./ctaContinueLabel"/>   
                                            <delinkConfirmationMessage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"                                                
                                                fieldLabel="Delink Confirmation Message"
                                                fieldDescription="Enter Delink sim confirmation message, Add a placeholder {0} which will be replaced by dynamic sim number"
                                                name="./delinkConfirmationMsg"/>                                          
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </delink>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
