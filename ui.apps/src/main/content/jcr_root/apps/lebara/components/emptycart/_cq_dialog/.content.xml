<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Empty Cart Component"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <commonColumn
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Common"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <emptyBasketText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Empty Cart Header Text"
                                    value="Your basket is empty :â€™("
                                    fieldLabel="Empty Cart Main Header Text"
                                    name="./emptyBasketText"/>
                            <goBackText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Empty Cart Secondary Header Text"
                                    value="Please go back shopping and come here when you have added a product to the basket!"
                                    fieldLabel="Empty Cart Secondary Header Text"
                                    name="./goBackText"/>
                            <shopBuyLabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Shop / Buy Label"
                                    value="Shop / Buy"
                                    fieldLabel="shop / Buy Label"
                                    name="./shopBuyLabel"/>
                            <cartDescription
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Cart Description"
                                    value="No contact. Change or cancel anytime"
                                    fieldLabel="Cart Description"
                                    name="./cartDescription"/>
                            <addOnTabLabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Add On Label"
                                    value="Add On"
                                    fieldLabel="addOn Tab Label"
                                    name="./addOnTabLabel"/>
                            <dataTabLabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Data Tab Label"
                                    value="Data"
                                    fieldLabel="Data Tab Label"
                                    name="./dataTabLabel"/>
                            <plansTabLabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Plans Label"
                                    value="Plans"
                                    fieldLabel="Plans Tab Label"
                                    name="./plansTabLabel"/>
                            <showDetailsLabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Show Details Label"
                                    value="SHOW DETAILS"
                                    fieldLabel="show Details Label"
                                    name="./showDetailsLabel"/>
                            <buyPlanLabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Buy Plan Label"
                                    value="BUY PLAN"
                                    fieldLabel="Buy Plan Label"
                                    name="./buyPlanLabel"/>
                            <addToCartLabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Add To Cart Label"
                                    value="ADD TO CART"
                                    fieldLabel="Add To Cart Label"
                                    name="./addToCartLabel"/>
                            <continueBrowsingLabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Continue Browsing Label"
                                    value="CONTINUE BROWSING"
                                    fieldLabel="Continue Browsing Label"
                                    name="./continueBrowsingLabel"/>
                            <continueBrowsingURL
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                    fieldLabel="Page path to map to continue browsing"
                                    name="./continueBrowsinglink"/>
                            <isfullwidth
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="Enable to have full width"
                                name="./isFullWidth"
                                text="Is Full Width?"
                                uncheckedValue="{Boolean}false"
                                value="{Boolean}true"/>
                        </items>
                    </commonColumn>
                    <column1
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Add ons"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <plans
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Plans"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                    composite="{Boolean}true"
                                    fieldDescription="Select Add-On plans to display on the Empty Cart"
                                    fieldLabel="Add Ons">
                                <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        name="./addOns">
                                    <granite:data
                                            jcr:primaryType="nt:unstructured"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <addOnPath
                                                        cq:showOnCreate="{Boolean}true"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="dam/cfm/components/cfpicker"
                                                        fieldLabel="Select Add ons"
                                                        name="./cfPath"
                                                        required="{Boolean}true"
                                                        rootPath="/content/dam/lebara"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </plans>
                        </items>
                    </column1>
                    <column2
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Data"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <plans
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Data Plans"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                    composite="{Boolean}true"
                                    fieldDescription="Select data plans to display on the Empty cart component"
                                    fieldLabel="Data Plans">
                                <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        name="./dataPlans">
                                    <granite:data
                                            jcr:primaryType="nt:unstructured"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <dataPlanPath
                                                        cq:showOnCreate="{Boolean}true"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="dam/cfm/components/cfpicker"
                                                        fieldLabel="Select Data"
                                                        name="./cfPath"
                                                        required="{Boolean}true"
                                                        rootPath="/content/dam/lebara"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </plans>
                        </items>
                    </column2>
                    <column3
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Plans"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <plans
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Plans"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                    composite="{Boolean}true"
                                    fieldDescription="Select plans to display on the view plan component"
                                    fieldLabel="Plans">
                                <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        name="./plans">
                                    <granite:data
                                            jcr:primaryType="nt:unstructured"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <planPath
                                                        cq:showOnCreate="{Boolean}true"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="dam/cfm/components/cfpicker"
                                                        fieldLabel="Select Plan"
                                                        name="./cfPath"
                                                        required="{Boolean}true"
                                                        rootPath="/content/dam/lebara"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </plans>
                        </items>
                    </column3>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
