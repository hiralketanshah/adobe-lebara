<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Login Module"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[lebara.touchui]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <genric
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Genric"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <selectLoginModule
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldLabel="Select Login Module"
                                                    name="./loginModuleType"
                                                    required="true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <loginGuest
                                                            jcr:primaryType="nt:unstructured"
                                                    text="Login-Guest"
                                                    value="loginGuest" />
                                                    <loginRegistration
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Login-Registration"
                                                            value="loginRegistration" />

                                                </items>
                                            </selectLoginModule>

                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </genric>
                    <login
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Login Form Fields"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <logintab
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Login Tab Label"
                                                name="./loginLabel"/>
                                            <emailaddresslabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Email Address /Mobile Number Label"
                                                fieldLabel="Email Address /Mobile Number Label"
                                                name="./loginEmailAddressLabel"/>
                                            <passwordlabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Email Password Label"
                                                fieldLabel="Password Label"
                                                name="./loginPasswordLabel"/>
                                            <forgotpasslabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Forgot password message"
                                                fieldLabel="Forgot password message"
                                                name="./loginForgotPassWordmsg"/>
                                            <resetlinktextlabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Reset Text Label"
                                                name="./loginResetLinkTextLabel"/>
                                            <resetlinklabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Reset Link Label"
                                                name="./loginResetLinkLabel"/>
                                            <loginlabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Login button Label"
                                                name="./loginButton"/>
                                            <loginregistrationmsg
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Registration Message Label"
                                                    name="./loginRegistrationMessage"/>
                                            <loginregistrationtextcta
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Registration CTA Text Label"
                                                    name="./loginRegistrationCtaLabel"/>
                                            <loginregistrationctalink
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Registration CTA Link Label"
                                                    name="./loginRegistrationCtaLink"/>

                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </login>
                    <registration
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Registration Form Fields"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <registrationtab
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Registration Tab Label"
                                                name="./registrationLabel"/>
                                            <email
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Email Address Label"
                                                name="./registrationEmailAddress"/>
                                            <password
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Password Label"
                                                name="./registrationPassword"/>
                                            <confpassword
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Confirm Password Label "
                                                name="./registrationConfirmPassword"/>
                                            <continue
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Registration Button Label"
                                                name="./registrationContinueButton"/>
                                            <registrationmsg
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Registration Message Label"
                                                name="./registrationMessage"/>
                                            <registrationtextcta
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Registration CTA Text Label"
                                                name="./registrationCtaLabel"
                                                />
                                            <registrationctalink
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Registration CTA Link Label"
                                                name="./registrationCtaLink"/>
                                            <show
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Show Label "
                                                name="./showLabel"/>
                                            <hide
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Hide Label"
                                                name="./hideLabel"/>

                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/collapsible"/>
                    </registration>
                    <guestlogin
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Guest Login"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <guestlogintab
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Guest Tab Label"
                                                name="./guestLoginLabel"/>
                                            <emailaddresslabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Email Address /Mobile Number Label"
                                                fieldLabel="Email Address /Mobile Number Label"
                                                name="./guestEmailAddressLabel"/>
                                            <mobilenumberlabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Lebara Password / Mobile Number Label"
                                                fieldLabel="Lebara Mobile Number Label"
                                                name="./guestMobileNumberLabel"/>
                                            <guestforgotpassmsg
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Forgot password message"
                                                    fieldLabel="Forgot password message"
                                                    name="./guestForgotPasswordMsg"/>
                                            <guestresetlinktextlabel
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Guest reset text label"
                                                    fieldLabel="Reset Text Label"
                                                    name="./guestResetLinkTextLabel"/>
                                            <guestresetlinklabel
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Guest reset link label"
                                                    fieldLabel="Reset Link Label"
                                                    name="./guestResetLinkLabel"/>
                                            <guestcontinuebuton
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Guest continue button Label"
                                                fieldLabel="Login Button Label"
                                                name="./guestContinueLabel"/>

                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/collapsible"/>
                    </guestlogin>
                    <errormessages
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Error Messages"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <emailfielderrormessage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Email Field Error Message"
                                                name="./emailFieldErrorMessage"/>
                                            <validemailfielderrormessage
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Valid Email Field Error Message"
                                                    name="./validEmailFieldErrorMessage"/>
                                            <passwordfielderrormessage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Password Field Error Message"
                                                name="./passwordFieldErrorMessage"/>
                                            <confirmfieldrrrormessage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Confirm Password Field Error Message"
                                                name="./confirmPasswordFieldErrorMessage"/>
                                            <mobilenumbererrormessage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Lebara Mobile Number Error Message"
                                                name="./mobileNumberErrorMessage"/>
                                            <mobilenumbererrormessage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Valid Mobile Number Error Message"
                                                name="./validMobileNumberErrorMessage"/>
                                            <mobilenumbererrormessagenotmatch
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Mobile Number Not Match Message"
                                                    name="./mobileNumberNotMatchErrorMessage"/>
                                            <mobilenumbermaxlength
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Mobile Number Max Length"
                                                name="./mobileNumberMaxLength"/>
                                            <mobilenumberfieldpattern
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Mobile Number Field Pattern"
                                                name="./mobileNumberFieldPattern"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/collapsible"/>
                    </errormessages>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
