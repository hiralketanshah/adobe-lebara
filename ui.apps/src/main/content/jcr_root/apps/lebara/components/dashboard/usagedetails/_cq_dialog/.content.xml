<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Usage Details"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <commonColumn
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Usage Details"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <usageDetailsHeading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Usage Details Text"
                                fieldLabel="Usage Details Text"
                                name="./title"
                                value="Usage Details"/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Usage Details description Text"
                                fieldLabel="Usage Details description Text"
                                name="./description"
                                value="Activity within the last {0} hours may not be seen"/>
                            <viewMoreLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="view More Label"
                                fieldLabel="view More Label"
                                name="./ctaSeeMoreCallsLabel"
                                value="View More"/>
                            <durationLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Duration Label"
                                fieldLabel="Duration Label"
                                name="./durationLabel"
                                value="Duration:"/>
                            <ctaLoadMoreLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Load More Label"
                                fieldLabel="Load More Label"
                                name="./ctaLoadMoreLabel"
                                value="See More"/>
                            <ctaSeeMoreURL
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                fieldDescription="Link pointed to by the See More button"
                                fieldLabel="Cta See More URL"
                                name="./ctaSeeMoreURL"
                                rootPath="/content/lebara"/>
                            <usageTabs
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                fieldLabel="Tabs Name"
                                metaType="text-single"
                                name="./tabsName"
                                valueType="string[]">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    name="./tabsName"/>
                            </usageTabs>
                            <isWhiteTabs
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                name="./isWhiteTabs"
                                text="is White Tabs?"
                                uncheckedValue="{Boolean}false"
                                value="{Boolean}true"/>
                            <showAll
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                name="./defaultSeeMoreClicked"
                                text="Show All by default?"
                                uncheckedValue="{Boolean}false"
                                value="{Boolean}true"/>
                        </items>
                    </commonColumn>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
