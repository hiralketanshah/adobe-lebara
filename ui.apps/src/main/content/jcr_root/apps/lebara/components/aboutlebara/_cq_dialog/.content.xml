<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="About Lebara Component">
    <content jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <image jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <columns jcr:primaryType="nt:unstructured">
                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured">
                                        <items jcr:primaryType="nt:unstructured">
                                            <backgroundColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                classicPaletteType="true"
                                                editType="true"
                                                fieldLabel="Background color"
                                                name="./backgroundColor"/>
                                            <imageAlign
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Select Image alignment, default alignment : Left"
                                                fieldLabel="Image Alignment"
                                                name="./imageAlign">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <left
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Left"
                                                        value="left"/>
                                                    <right
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Right"
                                                        value="right"/>
                                                </items>
                                            </imageAlign>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </image>
                    <text
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Text"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <titleGroup
                                                granite:hide="${cqDesign.titleHidden}"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">                                                                                                    
                                                    <headingType
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"                                                        
                                                        fieldLabel="Heading Type"
                                                        name="./headingType">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <h1
                                                                jcr:primaryType="nt:unstructured"
                                                                text="H1"
                                                                value="h1"/>
                                                            <h2
                                                                jcr:primaryType="nt:unstructured"
                                                                text="H2"
                                                                value="h2"/>
                                                        </items>
                                                    </headingType>
                                                </items>
                                            </titleGroup>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </text>
                    <actions jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <columns jcr:primaryType="nt:unstructured">
                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured">
                                        <items jcr:primaryType="nt:unstructured">
                                            <buttonstyle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="By default, button style will be &quot;outline&quot;"
                                                fieldLabel="Button Style"
                                                name="./buttonStyle">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <default
                                                        jcr:primaryType="nt:unstructured"
                                                        text="(Default)"
                                                        value=""/>
                                                    <solid
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Solid"
                                                        value="solid"/>
                                                    <link
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Link"
                                                        value="link"/>
                                                    <ghost
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Ghost"
                                                        value="ghost"/>
                                                    <unstyled
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Unstyled"
                                                        value="unstyled"/>
                                                </items>
                                            </buttonstyle>
                                            <colorsEnabled
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="{Boolean}false"
                                                fieldDescription="When checked, enables definition of custom colors for button background and hover color."
                                                name="./colorsEnabled"
                                                text="Enable Custom Button Colors"
                                                uncheckedValue="{Boolean}false"
                                                value="{Boolean}true"/>
                                            <buttonBackgroundColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                disabled="{Boolean}true"
                                                fieldLabel="Button Background Color"
                                                name="./buttonBackgroundColor"
                                                showDefaultColors="{Boolean}false"
                                                showProperties="{Boolean}true"
                                                showSwatches="{Boolean}true"/>
                                            <buttonHoverBgColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                disabled="{Boolean}true"
                                                fieldLabel="Button Hover Background Color"
                                                name="./buttonHoverBgColor"
                                                showDefaultColors="{Boolean}false"
                                                showProperties="{Boolean}true"
                                                showSwatches="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </actions>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
